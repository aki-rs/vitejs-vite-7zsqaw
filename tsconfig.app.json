{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/app",
    "rootDir": "./src",
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsx": "react" // JSXサポートの追加
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx" // tsxファイルを含める
  ],
  "exclude": ["node_modules"]
}
